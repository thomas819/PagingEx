<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.thomas.pagingstudy.ui.network.NetworkPagingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.network.NetworkPagingActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/network_paging_rv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:viewModel="@{vm}"
            app:items="@{vm.data}"
            tools:listitem="@layout/item_network_paging"
            tools:itemCount="5"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/network_paging_fa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@+id/network_paging_rv"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>